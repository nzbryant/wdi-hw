<form action='/' method='post'>
 	<h2>Enter your to do here:</h2>
 	<input type="text" name="title" placeholder="What to do?">
 	<p>
 	<textarea rows="4" cols="50" name="description" autofocus>Description</textarea>
 	<p>
 	<input type="submit" value="Submit">
</form>

<p class="headtodo">Your To Dos are Listed Below:</p>

<% for todo in todos %>
	<h3><%= todo['title'] %>: 
	<%= todo['description'] %></h3>
<% end %>